{
  // apc config

  "apc.electron": {
    "frame": false,
    "titleBarStyle": "hidden",
  },
  "apc.menubar.compact": true,
  "apc.header": {
    "height": 20,
    "fontSize": 11
  },
  "apc.listRow": {
    "height": 20,
    "fontSize": 15
  },
  "apc.sidebar.titlebar": {
    "height": 20
  },
  "apc.activityBar": {
    "size": 30,
    "itemSize": 30,
    "itemMargin": 5
  },

  // "apc.stylesheet": {
  //   ".title-label": "display: none !important",
  //   ".composite.title": "display: block !important",
  //   ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important"
  // },

  // ====================


  // vim
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "i",
        "i"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-f>"],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
  ],
  "workbench.iconTheme": "easy-icons",
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "telemetry.telemetryLevel": "off",
  "workbench.colorTheme": "Acid Purple (Orange)",
  "window.titleBarStyle": "native",
  "editor.minimap.enabled": false,
  "workbench.sideBar.location": "right",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "editor.glyphMargin": false,
  "editor.folding": false,
  "editor.lineNumbers": "off",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "workbench.statusBar.visible": false,
  "solargraph.commandPath": "/home/dd/.rbenv/shims/solargraph",
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "workbench.activityBar.location": "hidden",
}