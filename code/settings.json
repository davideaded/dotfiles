{
  // apc config

  "apc.electron": {
    "frame": false,
    "titleBarStyle": "hidden",
  },
  "apc.menubar.compact": true,
  "apc.header": {
    "height": 20,
    "fontSize": 11
  },
  "apc.listRow": {
    "height": 20,
    "fontSize": 15
  },
  "apc.sidebar.titlebar": {
    "height": 20
  },
  "apc.activityBar": {
    "size": 30,
    "itemSize": 30,
    "itemMargin": 5
  },

  // "apc.stylesheet": {
  //   ".title-label": "display: none !important",
  //   ".composite.title": "display: block !important",
  //   ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important"
  // },

  // ====================

  "workbench.iconTheme": "easy-icons",
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "telemetry.telemetryLevel": "off",
  "workbench.colorTheme": "Kurenai",
  "window.titleBarStyle": "native",
  "editor.minimap.enabled": false,
  "workbench.sideBar.location": "right",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "editor.glyphMargin": false,
  "editor.folding": false,

  // vim
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "i",
        "i"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  // ========
}