[
  {
    "key": "ctrl+e",
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletVisible"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "!editorFocus && vim.active"
  },
  {
    "key": "ctrl+[Quote]",
    "command": "workbench.action.activityBarLocation.hide"
  },
  {
    "key": "ctrl+[Semicolon]",
    "command": "workbench.action.focusActivityBar"
  },
  // Example: Custom keybinding for selecting the next occurrence of the word
  {
    "key": "ctrl+d", // Replace with your desired key combination
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  }
]